<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navber navber-expand-lg navber-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers", root_path, class: "text-light" %>
          <button class="navber-toggler collapsed" type="button" data-toggle="collapse"
          data-target="#navberNavDropdown" aria-controls="navberNavDropdown"
          aria-expanded="false" aria-label="Toggle navigation">
            <span class="navber-toggler-icon"></span>
          </button>
          <div class="collapse navber-collapse" id="navberNavDropdown">
            <ul class="navber-nav ml-auto">
              <% if user_signed_in? %>
                <%= link_to "Home", root_path, class: "fas fa-home nav-link text-light" %>
                <%= link_to "Users", users_path, class: "fas fa-users nav-link text-light" %>
                <%= link_to "Books", books_path, class: "fas fa-book-open nav-link text-light" %>
                <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-light" %>
              <% else %>
                <%= link_to "Home", root_path, class: "fas fa-home nav-link text-light" %>
                <%= link_to "About", about_path, class: "fas fa-link nav-link text-light" %>
                <%= link_to "Sign up", new_user_registration_path, class: "fas fa-user-plus nav-link text-light" %>
                <%= link_to "Log in", new_user_session_path, class: "fas fa-sign-in-alt nav-link text-light" %>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>

    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
